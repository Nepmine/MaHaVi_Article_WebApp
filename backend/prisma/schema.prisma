generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId    String  @id @default(auto()) @map("_id") @db.ObjectId
  googleId  String  @unique
  email     String  @unique
  name      String?
  givenName String?
  photoUrl  String?

  likedPostIds String[] @db.ObjectId
  likedPosts   Post[]   @relation(fields: [likedPostIds], references: [postId])

  comments      Comment[]
  authorProfile Author?

  // ðŸ‘‡ Opposite relation field for GalleryLike
  galleryLikes GalleryLike[]
}

model Post {
  postId        String  @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  headline      String
  frontImageUrl String?
  content       String?

  author   Author @relation(fields: [authorId], references: [authorId])
  authorId String @db.ObjectId

  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  likedUser String[] @db.ObjectId
  likedBy   User[]   @relation(fields: [likedUser], references: [userId])

  comments Comment[]
  category String[]
  trending Boolean   @default(false)
  article  Boolean   @default(false)
}

model Author {
  authorId String @id @default(auto()) @map("_id") @db.ObjectId

  userId         String @unique @db.ObjectId
  generalDetails User   @relation(fields: [userId], references: [userId])

  posts     Post[]
  // ðŸ‘‡ Opposite relation field for Gallery
  galleries Gallery[]
}

model Comment {
  commentId String @id @default(auto()) @map("_id") @db.ObjectId
  comment   String

  userId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [userId])

  post   Post   @relation(fields: [postId], references: [postId])
  postId String @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes     Int      @default(0)
}

model Gallery {
  galleryId String   @id @default(auto()) @map("_id") @db.ObjectId
  images    String[] // array of image URLs
  likes     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author   Author @relation(fields: [authorId], references: [authorId])
  authorId String @db.ObjectId

  // ðŸ‘‡ Opposite relation for GalleryLike
  galleryLikes GalleryLike[]
}

model GalleryLike {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String @db.ObjectId
  galleryId String @db.ObjectId

  user    User    @relation(fields: [userId], references: [userId])
  gallery Gallery @relation(fields: [galleryId], references: [galleryId])

  @@unique([userId, galleryId]) // prevent duplicate likes
}
